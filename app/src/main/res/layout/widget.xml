<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/widget_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#5711D9"
    android:orientation="vertical"
    android:padding="16dp"
    android:textColor="@android:color/white">

    <TextView
        android:id="@+id/widget_streak_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Streak: 0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorSelected"
        android:textSize="20sp" />

    <Button
        android:id="@+id/widget_open_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2C008E"
        android:text="Open Journal App"
        android:textColor="@color/colorSelected" />
</LinearLayout>