<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Custom Hamburger Menu Icon at the top right -->
    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hamburger_icon"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:contentDescription="Menu Button" />

    <!-- Separator line below the menu button -->
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_below="@id/menuButton"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Plus Button at the bottom center -->
    <ImageButton
        android:id="@+id/plusButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@android:drawable/ic_input_add"
        android:background="@drawable/circular_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:contentDescription="Plus Button"
        android:elevation="8dp"/>

    <!-- Separator line above the plus button -->
    <View
        android:id="@+id/separatorBelow"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_above="@id/plusButton"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />
</RelativeLayout>
